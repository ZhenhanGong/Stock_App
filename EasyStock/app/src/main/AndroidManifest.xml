<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.yow.easystock">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->


            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BottomBar.MySelection.AddSelectionActivity"
            android:label="@string/title_activity_add_selection"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BottomBar.MySelection.SelectionDetail"
            android:label="@string/title_activity_selection_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DrawerNavigation.AutoWarning"
            android:label="@string/title_activity_auto_warning"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DrawerNavigation.AddWarning"
            android:label="@string/title_activity_add_warning"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DrawerNavigation.AccountManager"
            android:label="@string/title_activity_account_manager"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DrawerNavigation.GainAndLossToday"
            android:label="@string/title_activity_gain_and_loss_today"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DrawerNavigation.GainAndLossTotal"
            android:label="@string/title_activity_gain_and_loss_total"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DrawerNavigation.About"
            android:label="@string/title_activity_about"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>